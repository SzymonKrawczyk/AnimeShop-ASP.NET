@model AnimeShop.Models.CategoryModel

@{
    ViewBag.Title = "Dodawanie nowej kategorii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal S-card-default">
        <h4>Dodawanie nowej kategorii</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="S-button btn btn-default" />
            </div>
        </div>
        @Html.ActionLink("Powrót", "Index", "Manage", null, null)
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
